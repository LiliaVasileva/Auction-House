<main>

  <!-- In case of error, display the following div-->

  {{#if errors}}
    <div class="error-box">
      {{#each errors}}
        <p>Show each error in a separate paragraph</p>
      {{/each}}
    </div>
  {{/if}}

  <section id="login-section" class="narrow">

    <h1 class="item">Login</h1>

    <div class="item padded align-center">

      <form class="aligned" method="POST" action="/login">

        <label>
          <span>Email</span>
          <input type="text" name="email" />
        </label>
        <label>
          <span>Password</span>
          <input type="password" name="password" />
        </label>

        <div class="align-center">
          <input class="action" type="submit" value="Sign In" />
        </div>

      </form>

    </div>

  </section>

</main>